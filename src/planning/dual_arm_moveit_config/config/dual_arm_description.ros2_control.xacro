                <state_interface name="position">
                  <param name="initial_value">${initial_positions['right_elbow_pitch_joint_X6']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="right_wrist_yaw_joint_X4">
