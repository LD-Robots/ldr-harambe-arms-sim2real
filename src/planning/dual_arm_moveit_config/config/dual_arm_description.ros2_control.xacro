                <state_interface name="position">
                  <param name="initial_value">${initial_positions['left_shoulder_yaw_joint_X4']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="left_elbow_pitch_joint_X6">
