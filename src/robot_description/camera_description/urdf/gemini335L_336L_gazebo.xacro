<?xml version="1.0"?>
<!-- Gazebo RGBD sensor definition for the Orbbec Gemini 335L/336L camera -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <gazebo reference="camera_link">
        <sensor name="camera" type="rgbd_camera">
            <always_on>true</always_on>
            <update_rate>30</update_rate>
            <topic>camera</topic>
            <enable_metrics>false</enable_metrics>
            <visualize>true</visualize>
            <gz_frame_id>camera_link</gz_frame_id>
            <camera name="camera">
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.1</near>
                    <far>10.0</far>
                </clip>
                <depth_camera>
                    <clip>
                        <near>0.1</near>
                        <far>10.0</far>
                    </clip>
                </depth_camera>
                <lens>
                    <intrinsics>
                        <fx>554.25469</fx>
                        <fy>554.25469</fy>
                        <cx>319.5</cx>
                        <cy>239.5</cy>
                        <s>0</s>
                    </intrinsics>
                </lens>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>
        </sensor>
    </gazebo>

</robot>
