<?xml version="1.0"?>
<!-- Gazebo RGBD sensor definition for the Orbbec Gemini 335L/336L camera -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <gazebo reference="camera_depth_frame">
        <sensor name="camera" type="rgbd_camera">
            <always_on>true</always_on>
            <update_rate>30</update_rate>
            <topic>camera</topic>
            <enable_metrics>false</enable_metrics>
            <visualize>false</visualize>
            <gz_frame_id>camera_depth_frame</gz_frame_id>
            <!-- Gemini 336L depth sensor specs (90째 x 65째 depth FOV, 1280x800) -->
            <camera name="camera">
                <horizontal_fov>1.5708</horizontal_fov>  <!-- 90째 depth HFOV -->
                <image>
                    <width>1280</width>
                    <height>800</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.17</near>   <!-- 336L minimum depth range -->
                    <far>20.0</far>     <!-- 336L maximum depth range -->
                </clip>
                <depth_camera>
                    <clip>
                        <near>0.17</near>
                        <far>20.0</far>
                    </clip>
                </depth_camera>
                <lens>
                    <!-- fx = (width/2) / tan(hfov/2) = 640 / tan(45째) = 640.0 -->
                    <intrinsics>
                        <fx>640.0</fx>
                        <fy>640.0</fy>
                        <cx>639.5</cx>
                        <cy>399.5</cy>
                        <s>0</s>
                    </intrinsics>
                </lens>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>
        </sensor>
    </gazebo>

</robot>
